{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>bcgov/renovate-config"
  ],
  "automerge": false,
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["poetry", "dockerfile"],
      "postUpdateOptions": ["poetryLockUpdate"]
    },
    {
      "matchFileNames": ["pay-api/**"],
      "groupName": "pay-api updates"
    },
    {
      "matchFileNames": [
        "pay-queue/**",
        "pay-admin/**",
        "jobs/payment-jobs/**",
        "jobs/ftp-poller/**"
      ],
      "groupName": "pay-api dependents updates"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "excludeFileNames": [
        "pay-api/**",
        "pay-queue/**",
        "pay-admin/**",
        "jobs/payment-jobs/**",
        "jobs/ftp-poller/**"
      ],
      "groupName": "non-major updates"
    },
    {
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "breaking"]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "groupName": "dev dependencies"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["dependencies", "security"],
    "schedule": ["at any time"]
  }
}
