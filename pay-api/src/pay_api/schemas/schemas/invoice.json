{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/invoice",
  "type": "object",
  "title": "Invoice",
  "required": [
    "_links",
    "createdBy",
    "createdOn",
    "id",
    "statusCode",
    "total",
    "references"
  ],
  "properties": {
    "_links": {
      "oneOf": [
        {
          "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/links"
        }
      ]
    },
    "createdBy": {
      "$id": "#/properties/createdBy",
      "type": "string",
      "title": "Created By",
      "default": "",
      "examples": [
        "CP0001219"
      ],
      "pattern": "^(.*)$"
    },
    "createdOn": {
      "$id": "#/properties/createdOn",
      "type": "string",
      "title": "Created On",
      "default": "",
      "examples": [
        "2019-06-05T11:23:03.196226+00:00"
      ],
      "pattern": "^(.*)$"
    },
    "id": {
      "$id": "#/properties/id",
      "type": "integer",
      "title": "Invoice Identifier",
      "default": 0,
      "examples": [
        1
      ]
    },
    "statusCode": {
      "$id": "#/properties/statusCode",
      "type": "string",
      "title": "Invoice status code",
      "default": "",
      "examples": [
        "CREATED"
      ],
      "pattern": "^(.*)$"
    },
    "total": {
      "$id": "#/properties/total",
      "type": "number",
      "title": "Total amount",
      "default": 0,
      "examples": [
        50
      ]
    },
    "gst": {
      "$id": "#/properties/gst",
      "type": "number",
      "title": "GST amount",
      "default": 0,
      "examples": [
        50
      ]
    },
    "paymentDate": {
      "$id": "#/properties/paymentDate",
      "type": "string",
      "title": "Payment Date",
      "default": 0
    },
    "refund": {
      "$id": "#/properties/refund",
      "type": "number",
      "title": "Refund Amount",
      "default": 0
    },
    "updatedBy": {
      "$id": "#/properties/updatedBy",
      "type": "string",
      "title": "Updated By",
      "default": 0
    },
    "updatedOn": {
      "$id": "#/properties/updatedOn",
      "type": "string",
      "title": "Updated On",
      "default": 0
    },
    "lineItems": {
      "type": "array",
      "items": {
        "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/line_item"
      }
    },
    "receipts": {
      "type": "array",
      "items": {
        "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/receipt"
      }
    },
    "references": {
      "type": "array",
      "items": {
        "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/invoice_reference"
      }
    },
    "details": {
      "oneOf": [
        {
          "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/invoice_details"
        }
      ]
    }
  }
}
