 {
   "$schema": "http://json-schema.org/draft-07/schema#",
  	 "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/payment_receipt_input",
  	 "type": "object",
  	 "title": "payment_receipt_input",
   "$comment": "schema for receipt generation when invoking with only payment id",
    "required": [
     "filingDateTime"
   ],
   "properties": {
     "corpName": {
       "$id": "#/properties/corpName",
       "type": "string",
       "title": "The corpName Schema",
       "default": "",
       "examples": [
         "ABC Co-op"
       ],
       "pattern": "^(.*)$"
     },
     "companyActDetails": {
       "$id": "#/properties/companyActDetails",
       "type": "string",
       "title": "Company Act Details",
       "default": "",
       "examples": [
         "BC Benefit Company - Business Corporations Act"
       ],
       "pattern": "^(.*)$"
     },
     "businessNumber": {
       "$id": "#/properties/businessNumber",
       "type": "string",
       "title": "Business Number",
       "default": "",
       "examples": [
         "1234567890"
       ],
       "pattern": "^(.*)$"
     },
      "effectiveDateTime": {
       "$id": "#/properties/effectiveDateTime",
       "type": "string",
       "title": "Effective Date Time",
       "default": "",
       "examples": [
         "1234567890"
       ],
       "pattern": "^(.*)$"
     },
     "filingIdentifier": {
       "$id": "#/properties/filingIdentifier",
       "type": "string",
       "title": "Filing Identifier",
       "default": "",
       "examples": [
         "1234567890"
       ],
       "pattern": "^(.*)$"
     },
     "filingDateTime": {
       "$id": "#/properties/filingDateTime",
       "type": "string",
       "title": "The Filing date time Schema",
       "default": "",
       "examples": [
         "June 27, 2019"
       ],
       "pattern": "^(.*)$"
     },
     "fileName": {
       "$id": "#/properties/fileName",
       "type": "string",
       "title": "The Filename Schema",
       "default": "",
       "examples": [
         "director-change"
       ],
       "pattern": "^(.*)$"
     },
     "isRefund": {
      "$id": "#/properties/isRefund",
      "type": "boolean",
      "title": "The Receipt type Schema",
      "default": false,
      "examples": [
        false,
        true
      ]
    }
   }
 }
