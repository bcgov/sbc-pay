{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/business_info",
  "type": "object",
  "required": [
    "corpType"
  ],
  "properties": {
    "businessIdentifier": {
      "$id": "#/properties/businessIdentifier",
      "type": "string",
      "title": "Business/Corp Identifier",
      "default": "",
      "examples": [
        "CP1000"
      ],
      "pattern": "^(.*)$",
      "minLength": 1
    },
    "corpType": {
      "$id": "#/properties/corpType",
      "type": "string",
      "title": "Corp Type",
      "default": "",
      "examples": [
        "CP,PPR","BC"
      ],
      "pattern": "^(.*)$",
      "minLength": 2
    },
    "businessName": {
      "$id": "#/properties/businessName",
      "type": "string",
      "title": "Business Name",
      "default": "",
      "examples": [
        "XYZ Corp"
      ],
      "pattern": "^(.*)$",
      "minLength": 1
    }
  }
}