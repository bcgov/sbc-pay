{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/business_info",
  "type": "object",
  "required": [
    "businessIdentifier",
    "corpType",
    "businessName",
    "contactInfo"
  ],
  "properties": {
    "businessIdentifier": {
      "$id": "#/properties/businessIdentifier",
      "type": "string",
      "title": "Business/Corp Identifier",
      "default": "",
      "examples": [
        "CP1000"
      ],
      "pattern": "^(.*)$",
      "minLength": 9
    },
    "corpType": {
      "$id": "#/properties/corpType",
      "type": "string",
      "title": "Corp Type",
      "default": "",
      "examples": [
        "CP"
      ],
      "pattern": "^(.*)$",
      "minLength": 2
    },
    "businessName": {
      "$id": "#/properties/businessName",
      "type": "string",
      "title": "Business Name",
      "default": "",
      "examples": [
        "XYZ Corp"
      ],
      "pattern": "^(.*)$",
      "minLength": 1
    },
    "contactInfo": {
      "oneOf": [
        {
          "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/contact_info"
        }
      ]
    }
  }
}