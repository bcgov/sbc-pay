{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/line_item",
  "type": "object",
  "title": "Payment Line Item",
  "required": [
    "description",
    "filingFees",
    "gst",
    "id",
    "priorityFees",
    "pst",
    "quantity",
    "futureEffectiveFees",
    "statusCode",
    "total"
  ],
  "properties": {
    "description": {
      "$id": "#/properties/line_items/items/properties/description",
      "type": "string",
      "title": "Description",
      "default": "",
      "examples": [
        "TEST"
      ],
      "pattern": "^(.*)$"
    },
    "filingFees": {
      "$id": "#/properties/line_items/items/properties/filingFees",
      "type": "integer",
      "title": "Filing Fees",
      "default": 0,
      "examples": [
        20
      ]
    },
    "gst": {
      "$id": "#/properties/line_items/items/properties/gst",
      "type": "integer",
      "title": "GST",
      "default": 0,
      "examples": [
        0
      ]
    },
    "id": {
      "$id": "#/properties/line_items/items/properties/id",
      "type": "integer",
      "title": "Line Identifier",
      "default": 0,
      "examples": [
        1
      ]
    },
    "priorityFees": {
      "$id": "#/properties/line_items/items/properties/priorityFees",
      "type": "integer",
      "title": "Priority fees",
      "default": 0,
      "examples": [
        0
      ]
    },
    "pst": {
      "$id": "#/properties/line_items/items/properties/pst",
      "type": "integer",
      "title": "PST",
      "default": 0,
      "examples": [
        0
      ]
    },
    "quantity": {
      "$id": "#/properties/line_items/items/properties/quantity",
      "type": "integer",
      "title": "Quantity",
      "default": 1,
      "examples": [
        1
      ]
    },
    "futureEffectiveFees": {
      "$id": "#/properties/line_items/items/properties/futureEffectiveFees",
      "type": "integer",
      "title": "Fees for future effective filing",
      "default": 0,
      "examples": [
        0
      ]
    },
    "statusCode": {
      "$id": "#/properties/line_items/items/properties/statusCode",
      "type": "string",
      "title": ":Line Status Code",
      "default": "",
      "examples": [
        "CREATED"
      ],
      "pattern": "^(.*)$"
    },
    "total": {
      "$id": "#/properties/line_items/items/properties/total",
      "type": "number",
      "title": "Line Total",
      "default": 0,
      "examples": [
        20
      ]
    }
  }
}
