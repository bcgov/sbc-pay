{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/payment_info",
  "type": "object",
  "required": [
    "methodOfPayment"
  ],
  "properties": {
    "methodOfPayment": {
      "$id": "#/properties/methodOfPayment",
      "type": "string",
      "title": "Method of payment",
      "enum": ["CC", "PREMIUM"],
      "examples": [
        "CC"
      ],
      "pattern": "^(.*)$"
    },
    "paymentSystem": {
      "$id": "#/properties/paymentSystem",
      "type": "string",
      "title": "Payment System",
      "default": "PAYBC",
      "examples": [
        "PAYBC"
      ],
      "pattern": "^(.*)$"
    }
  }
}