{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/contact_info",
  "type": "object",
  "title": "Contact Info",
  "required": [
    "city",
    "postalCode",
    "province",
    "addressLine1",
    "country"
  ],
  "properties": {
    "city": {
      "$id": "#/properties/city",
      "type": "string",
      "title": "City",
      "default": "",
      "examples": [
        "Victoria",
        "Vancouver"
      ],
      "pattern": "^(.*)$",
      "minLength": 1
    },
    "postalCode": {
      "$id": "#/properties/postalCode",
      "type": "string",
      "title": "Postal Code",
      "default": "",
      "examples": [
        "V8P2N2"
      ],
      "pattern": "^(.*)$",
      "minLength": 6
    },
    "province": {
      "$id": "#/properties/province",
      "type": "string",
      "title": ":Province",
      "default": "",
      "examples": [
        "BC"
      ],
      "pattern": "^(.*)$"
    },
    "addressLine1": {
      "$id": "#/properties/addressLine1",
      "type": "string",
      "title": "Address line 1",
      "default": "",
      "examples": [
        "1000 Douglas Street"
      ],
      "minLength": 1
    },
    "country": {
      "$id": "#/properties/country",
      "type": "string",
      "title": "Country",
      "default": "CA",
      "examples": [
        "CA",
        "US"
      ]
    }
  }
}